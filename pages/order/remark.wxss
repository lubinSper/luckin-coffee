page {
    background-color: #fbfbfb;
    padding-bottom: 118rpx;
}

.remarkBody {
    background: #fff;
    padding: 0 30rpx 48rpx 30rpx;
    margin-top: 10rpx;
}

.remarkBody .remarkItem {
    padding: 30rpx 0 20rpx 0;
    border-bottom: 2rpx solid #f1f1f1;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.remarkBody .lastItem {
    margin-bottom: 40rpx;
    border: none;
}

.remarkBody .remarkTitle {
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
    padding-bottom: 30rpx;
}

.remarkBody .remarkOpts {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}

.remarkBody .remarkOpts view {
    width: 148rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 32rpx;
    font-size: 26rpx;
    color: #666;
    text-align: center;
    background: #fbfbfb;
    margin-right: 30rpx;
    margin-bottom: 10rpx;
}

.remarkBody .remarkOpts .active {
    border: 1rpx solid #7ca7d2;
    color: #7ca7d2;
    background: #fff;
}

.remarkBody .remarkItem .itemAmount {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 15px;
}

.remarkBody .remarkItem .itemAmount .itemAmountBtn {
    width: 38rpx;
    height: 38rpx;
}

.remarkBody .remarkItem .itemAmount .addIcon {
    background: #fff url('https://static.luckincoffeecdn.com/mini/images/common/add_icon.png') no-repeat;
    background-size: cover;
}

.remarkBody .remarkItem .itemAmount .minusIcon {
    background: #fff url('https://static.luckincoffeecdn.com/mini/images/common/minus_icon.png') no-repeat;
    background-size: cover;
}

.remarkBody .remarkItem .itemAmount .itemAmountText {
    font-size: 28rpx;
    text-align: center;
    color: #333;
    width: 40rpx;
}

.remarkBody .remarkTxt {
    border: 1rpx solid #e5e5e5;
    border-radius: 6rpx;
    padding: 20rpx;
    color: #333;
    font-size: 26rpx;
    height: 150rpx;
    position: relative;
}

.remarkBody .remarkTxt textarea {
    color: #333;
    width: 100%;
    font-size: 26rpx;
    height: 120rpx;
}

.remarkBody .remarkTxt .remarkPlaceholder {
    color: #cdcdcd;
    font-size: 26rpx;
    position: absolute;
}

.remarkBody .remarkTxt .txtCount {
    text-align: right;
    width: 100%;
    font-size: 24rpx;
    color: #666;
}

.remarkFooter {
    z-index: 10000;
    width: 100%;
    height: 118rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,0.15);
    display: flex;
    justify-content: center;
    align-items: center;
}

.remarkFooter .saveBtn {
    height: 84rpx;
    line-height: 84rpx;
    width: 100%;
    text-align: center;
    margin: 0 30rpx;
    background: #7ca7d2;
    color: #fff;
    border-radius: 6rpx;
}